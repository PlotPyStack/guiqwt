{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gettext - Scan",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "gettext.bat",
                "rescan",
            ],
            "options": {
                "cwd": "scripts",
                "env": {
                    "UNATTENDED": "1",
                    "PYTHONUTF8": "1",
                    "PYTHON": "${env:PPSTACK_PYTHONEXE}",
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
